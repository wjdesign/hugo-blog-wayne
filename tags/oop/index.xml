&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="n">drive_car&lt;/span>&lt;span class="p">(&lt;/span>&lt;span class="n">my_gas_car&lt;/span>&lt;span class="p">)&lt;/span>
