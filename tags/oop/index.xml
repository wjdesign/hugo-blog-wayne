&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="n">my_electric_car&lt;/span>&lt;span class="o">.&lt;/span>&lt;span class="n">drive&lt;/span>&lt;span class="p">()&lt;/span>
